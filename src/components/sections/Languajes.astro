---
import Section from "../Section.astro";

import { languages } from "@cv";

---
<Section title="Idiomas">
    <ul>
        {
            languages.map(({ language, fluency }) => {
                return(
                    <li>
                        <span>{ language } - { fluency }</span>
                    </li>
                )
            })
        }
    </ul>
</Section>
<style>
    ul {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li{
        border-radius: 6px;
        background: #eee;
        color: black;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>